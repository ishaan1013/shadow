{
  "name": "shadow-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:push:reset": "turbo run db:push:reset",
    "db:studio": "turbo run db:studio",
    "generate": "turbo run generate",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:server": "docker build -f apps/server/Dockerfile -t shadow-server .",
    "docker:sidecar": "docker build -f apps/sidecar/Dockerfile -t shadow-sidecar .",
    "start:prod": "npm run build && source firecracker-cluster-config.env && AGENT_MODE=firecracker NODE_ENV=production npm run --workspace=apps/server start"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
